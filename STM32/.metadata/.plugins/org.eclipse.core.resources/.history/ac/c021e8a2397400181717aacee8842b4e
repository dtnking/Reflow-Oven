/* Private variables ---------------------------------------------------------*/
#define TIM4_DMAR_ADDRS ((uint32_t)0x4000084C)
//uint16_t aSRC_Buffer[6] = {0x5,0x50,0x500,0x800,0x1900,0x2500};
uint16_t aSRC_Buffer[3] = {0x10,0x40};
uint16_t aSRC_Buffer2[6] = {0x2, 0x00,0x91,0x100,0x00, 0x50};

